<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="1166px">


    <!-- 编号 -->
    <FrameLayout
        android:layout_width="46px"
        android:layout_height="46px"
        android:layout_marginLeft="30px"
        android:layout_marginTop="68px"
        android:background="@drawable/mine_store_item_detail_number_bg">

        <TextView
            android:id="@+id/tv_item_mine_store_item_detail_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="1"
            android:textColor="@color/mine_store_item_detail_number_bg"
            android:textSize="23px" />


    </FrameLayout>


    <!-- 描述 -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="29px"
        android:layout_marginRight="29px"
        android:layout_marginTop="128px"
        android:background="@color/mine_store_item_detail_desc_bg">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="34px"
            android:layout_marginLeft="30px"
            android:layout_marginRight="30px"
            android:layout_marginTop="34px"
            android:text="我们一个像夏天,一个像秋天,却总能把冬天变成了春天"
            android:textColor="@color/black"
            android:textSize="22px" />


    </FrameLayout>

    <!-- 显示商品图片 -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="628px"
        android:layout_marginLeft="30px"
        android:layout_marginRight="30px"
        android:layout_marginTop="272px"
        android:scaleType="fitXY"
        android:src="@mipmap/test9" />

    <!-- 积分图标 -->
    <com.qks.beautyexchange.ui.view.IntegralView
        android:layout_width="30px"
        android:layout_height="30px"
        android:layout_gravity="right"
        android:layout_marginRight="198px"
        android:layout_marginTop="940px"
        app:layout_auto_basewidth="height|width" />

    <!-- 价格 -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="145px"
        android:layout_marginTop="944px"
        android:text="@string/main_item_integral"
        android:textColor="@color/mine_store_item_detail_integral_text_bg"
        android:textSize="22px" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="30px"
        android:layout_marginTop="945px"
        android:text="+  50RMB"
        android:textColor="@color/black"
        android:textSize="19px" />


    <!-- 爱心 回复 分享 -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="73px"
        android:layout_marginLeft="30px"
        android:layout_marginRight="30px"
        android:layout_marginTop="1004px"
        android:background="@color/mine_store_item_detail_desc_bg">


        <!-- 爱心 -->
        <ImageView
            android:layout_width="31px"
            android:layout_height="28px"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="28px"
            android:src="@mipmap/main_item_love" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="69px"
            android:text="50"
            android:textColor="@color/black"
            android:textSize="22px" />

        <!-- 回复个数 -->
        <ImageView
            android:layout_width="28px"
            android:layout_height="31px"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="315px"
            android:src="@mipmap/main_item_comment" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="358px"
            android:text="50"
            android:textColor="@color/black"
            android:textSize="22px" />


        <!-- 分享 -->
        <ImageView
            android:layout_width="28px"
            android:layout_height="30px"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="629px"
            android:src="@mipmap/main_item_share" />


    </FrameLayout>



    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_gravity="bottom"
        android:background="@color/mine_store_item_detail_cut_off_rule"
        android:layout_marginBottom="38px"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="38px"
        android:background="@color/mine_store_item_detail_cut_off_rule_bg"
        android:layout_gravity="bottom"/>



</FrameLayout>